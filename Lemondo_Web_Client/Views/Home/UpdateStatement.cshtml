@using Lemondo_Web_Client.Service
@model StatementDTO
@{
    ViewData["Title"] = "Update Statement";
}
@if (@Model.ErrrorMessage.Count != 0)
{
    @foreach (var item in @Model.ErrrorMessage)
    {
        <h1>@item</h1>
    }
}


<div class="col-md-8">
    <form asp-action="UpdateStatementApi" class="row g-3 needs-validation" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="StatementDetailId" />
        <div class="col-md-4">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" type="text" class="form-control" value="@Model.Title" >
        </div>

            <input type="file" id="file1" name="file1" multiple="multiple" />

        <div class="col-md-4">
            <label asp-for="StatementDetail.Description" class="form-label">Description</label>
            <input asp-for="StatementDetail.Description" type="text" class="form-control" value="@Model.StatementDetail.Description >
        </div>
        <div class="col-md-4">
            <label asp-for="StatementDetail.PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="StatementDetail.PhoneNumber" type="text" class="form-control" value="@Model.StatementDetail.PhoneNumber" >
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>

    </form>
</div>